<header>
  <nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand d-flex align-items-center py-0 m-0" do %>
        <%= image_tag("ながのCAKE_ロゴ.png", alt: "ながのCAKE ロゴ", class: "cake-logo") %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li>
            <%= link_to customer_path(current_customer), class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fas fa-user"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to items_path, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fa-brands fa-shopify"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to cart_items_path, class: 'nav-link text-dark font-weight-bold' do %>
                <i class="fas fa-shopping-cart"></i> カート
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fas fa-sign-out-alt"></i> logout
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to homes_about_path, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to items_path, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fa-brands fa-shopify"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class: 'nav-link text-dark font-weight-bold' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>