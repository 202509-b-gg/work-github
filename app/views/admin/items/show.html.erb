<div class='container py-5'>
  <div class='row'>
      <div class='mx-auto'>
        <div>
          <h4>商品詳細</h4>
        </div>
        <div class='row'>
          <div class="product-image-area">
            <%= image_tag @item.get_item_image, size:"300x200" %>
          </div>
          <div class="description-scroll col-6 px-3">  
            <p><%= @item.name %></p>
            <p class="description-scroll"><%= @item.introduction %></p>
            <div class="d-inline-flex align-items-end">
              <p class="fw-bold mb-0">
              <%= "#{@item.add_tax_price.to_s(:delimited)}（#{@item.price}）円" %>
              </p>
            </div>
          </div>
        </div>
        <div class="row mt-4">
        <div class="col-md-8 offset-md-5">
            <div>
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success'%>
            </div>
      </div>
    </div>
  </div>
</div>