<div class="container mt-5" style="max-width: 800px;">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <!-- 管理者ログインタイトル -->
      <h2 class="mb-4" style="background: #e0e0e0; display: inline-block; padding: 0 1rem;">管理者<span style="font-weight: normal;">ログイン</span></h2>

      <!-- ログインフォーム -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3 align-items-center">
          <label class="col-md-3 col-form-label text-md-end fw-bold">メールアドレス</label>
          <div class="col-md-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-4 align-items-center">
          <label class="col-md-3 col-form-label text-md-end fw-bold">パスワード</label>
          <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row mb-3">
            <div class="offset-md-3 col-md-7">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="row mb-3">
          <div class="offset-md-3 col-md-7 d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>