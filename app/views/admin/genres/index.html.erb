<div class='container py-1'>
  <h4 class='my-2'>ジャンル一覧・追加</h4>
  <div class='my-3'>
    <%= form_with model: [:admin, @genre], local: true, class: "form-inline" do |f| %>

      <div class="form-group mr-2">
        <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名" %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <table class="table table-hover">
    <thead>
      <th>ジャンル</th>
      <th></th>
      <th></th>
    </thead>
      <% @genres.each do |genre| %>
        <tr>
        <td>
          <%= genre.name %>
        </td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>    
        </tr>
      <% end %>
  </table>
</div>
