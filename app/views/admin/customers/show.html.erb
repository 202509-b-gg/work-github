<div class="container-fluid py-5">

  <h3 class="col-lg-3 offset-lg-2 mb-4">
    <span class="bg-light d-inline-block px-2">
      <%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細
    </span>
  </h3>

  <!-- 会員情報テーブル -->
  <table class="table table-borderless mb-4 w-auto">
    <tbody>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td class="font-weight-bold">
          <% if @customer.is_active %>
            <span class="text-success">有効</span>
          <% else %>
            <span class="text-secondary">無効</span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <!-- ボタン -->
    <%= link_to '編集する', edit_admin_customer_path(@customer), method: :get, class: 'btn btn-success mb-2' %>
    <%= link_to '注文履歴一覧を見る', admin_root_path, method: :get, class: 'btn btn-primary mb-2' %>
</div>
