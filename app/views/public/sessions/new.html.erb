<div class="container mt-5" style="max-width: 800px;">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <!-- ログインタイトル -->
      <h2 class="mb-4" style="background: #e0e0e0; display: inline-block; padding: 0 1rem;">ログイン</h2>

      <!-- 会員ログインの説明 -->
      <div class="mb-4">
        <div style="background: #e0e0e0; display: inline-block; padding: 0 1rem;">会員の方はこちらからログイン</div>
      </div>

      <!-- ログインフォーム -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3 align-items-center">
          <label class="col-md-3 col-form-label text-md-end fw-bold">メールアドレス</label>
          <div class="col-md-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
          </div>
        </div>
        <div class="row mb-4 align-items-center">
          <label class="col-md-3 col-form-label text-md-end fw-bold">パスワード</label>
          <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row mb-3">
            <div class="offset-md-3 col-md-7">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="row mb-3">
          <div class="offset-md-3 col-md-7 d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>

      <!-- 未登録者への案内 -->
      <div class="mt-5">
        <div style="background: #e0e0e0; display: inline-block; padding: 0 1rem;">会員登録がお済みでない方</div>
        <div class="mt-3">
          <%= link_to "こちら", new_customer_registration_path, class: "fw-bold", style: "color: #3333cc;" %>
          から新規登録を行ってください。
        </div>
      </div>

    </div>
  </div>
</div>