<div class="container p-3">
  <!-- タイトル：画像のような装飾 -->
  <div class="row">
    <div class="col-md-12 text-left">
      <h3 class="order-history-title">
        <span class="order-history-title-text">注文履歴一覧</span>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table order-history-table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="order-date"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <ul class="list-unstyled mb-0">
                  <% order.order_details.each do |order_detail| %>
                    <li><%= order_detail.item.name %></li>
                  <% end %>
                </ul>
              </td>
              <td class="order-total-payment">
                <%= number_to_currency(order.total_payment, unit: "円", precision: 0, format: "%n%u") %>
              </td>
              <td><%= order.status_i18n %></td>
              <td>
                <%= link_to "表示する", order_path(order.id), class: "btn btn-info" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>