<div class="order-history-detail-container">
  <h3 class="order-history-detail-title"><span>注文履歴詳細</span></h3>

  <div class="order-history-detail-main">
    <!-- 注文情報 -->
    <div class="order-history-detail-info">
      <div class="section-label">注文情報</div>
      <table class="order-history-detail-info-table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <!-- 請求情報 -->
    <div class="order-history-detail-billing">
      <div class="section-label">請求情報</div>
      <table class="order-history-detail-billing-table">
        <tr>
          <td class="billing-label">商品合計</td>
          <td class="billing-value"><%= number_with_delimiter(@order.total_payment) %></td>
        </tr>
        <tr>
          <td class="billing-label">配送料</td>
          <td class="billing-value"><%= number_with_delimiter(@order.shipping_cost) %></td>
        </tr>
        <tr>
          <td class="billing-label"><strong>ご請求額</strong></td>
          <td class="billing-value"><%= number_with_delimiter(@order.total_payment + @order.shipping_cost) %></td>
        </tr>
      </table>
    </div>
  </div>

  <!-- 注文内容 -->
  <div class="order-history-detail-items">
    <div class="section-label">注文内容</div>
    <table class="order-history-detail-items-table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= number_with_delimiter(order_detail.item.price) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= number_with_delimiter(order_detail.amount * order_detail.item.price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>