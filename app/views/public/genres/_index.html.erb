<aside class='col-md-3'>
      <div class="card mb-4">
      <div class="card-header text-center font-weight-bold">
            ジャンル検索
      </div>
      <ul class="list-group list-group-flush">
        <% @genres.each do |genre| %>
            <li class="list-group-item text-center">
              <%= link_to genre_path(@genre) do %>
                <%= genre.name %>
              <% end %>
            </li>
        <% end %>
      </ul>
      </div>
</aside>