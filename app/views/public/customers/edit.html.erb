<h2 class="mb-4 ms-2">会員情報編集</h2>

<div class="container-fluid px-3">
  <%= form_with model: @customer, url: customer_path(@customer), method: :patch, local: true do |f| %>

    <!-- 氏名 -->
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">氏名</label>
      <div class="col-sm-5">
        <%= f.text_field :last_name, class: "form-control", placeholder: "山田" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :first_name, class: "form-control", placeholder: "花子" %>
      </div>
    </div>

    <!-- フリガナ -->
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">フリガナ</label>
      <div class="col-sm-5">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <!-- 郵便番号 -->
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">郵便番号</label>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <!-- 住所 -->
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">住所</label>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <!-- 電話番号 -->
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">電話番号</label>
      <div class="col-sm-10">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <!-- メールアドレス -->
    <div class="mb-4 row">
      <label class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <!-- ボタン -->
    <div class="d-flex gap-2 ms-2">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
