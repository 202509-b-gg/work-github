<!-- 配送先フォーム -->
<%= form_with model:address, local: true do |f| %>
  <div class="mb-3 row">
    <%= f.label :postal_code, '郵便番号(ハイフンなし)', class: 'col-lg-2 col-form-label' %>
    <%= f.text_field :postal_code, class: 'form-control col-lg-1 ml-5' %>
  </div>
  <div class="mb-3 row">
    <%= f.label :address, '住所', class: 'col-lg-2 col-form-label' %>
    <%= f.text_field :address, class: 'form-control col-lg-3 ml-5' %>
  </div>
  <div class="mb-5 row">
    <%= f.label :recipient_name, '宛名', class: 'col-lg-2 col-form-label' %>
    <%= f.text_field :recipient_name, class: 'form-control col-lg-1 ml-5' %>
    <% submit_label = address.new_record? ? '新規登録' : '変更内容を保存' %>
    <%= f.submit submit_label, class: 'btn btn-success col-lg-1 offset-lg-2' %>
  </div>
<% end %>
