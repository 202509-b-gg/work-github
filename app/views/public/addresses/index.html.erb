    <!-- 登録済み住所一覧テーブル -->
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th style="width: 15%;">郵便番号</th>
          <th style="width: 45%;">住所</th>
          <th style="width: 20%;">宛名</th>
          <th style="width: 20%;"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td class="text-center">
              <%= link_to '編集する', edit_address_path(address), class: 'btn btn-success btn-sm me-1' %>
              <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
