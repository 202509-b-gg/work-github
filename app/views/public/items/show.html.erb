<div class='container py-5'>
  <div class='row'>
    <%= render 'sidebar' %>
      <div class='col-md-10'>
        <div class='row'>
          <div class="product-image-area">
            <%= image_tag @item.get_item_image, size:"300x200" %>
          </div>
          <div class="description-scroll col-6 px-3">  
            <h2><%= @item.name %></h2>
            <p class="description-scroll"><%= @item.introduction %></p>
            <div class="d-inline-flex align-items-end">
              <h4 class="fw-bold mb-0">
              <%= "¥#{@item.add_tax_price.to_s(:delimited)}" %>
              </h4>
              <small class="ms-1" style="font-size:0.8rem; line-height:1;">(税込)</small>
            </div>
          </div>
        </div>
                
        <div class="row mt-4">
        <div class="col-md-6 offset-md-6">
          <%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <div class="input-group" style="max-width: 250px;">
              <%= f.select :amount, (1..10), {}, {class: 'custom-select', id: 'cart_item_amount'} %>
              <div class="input-group-append">
                <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>